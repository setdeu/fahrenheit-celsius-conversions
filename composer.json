{
    "name": "setdeu/fahrenheit-celsius-conversions",
    "description": "Fahrenheit to Celsius temperature conversions.",
    "keywords": [
        "setdeu",
        "fahrenheit-celsius-conversions"
    ],
    "homepage": "https://github.com/setdeu/fahrenheit-celsius-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Serv√≠n",
            "email": "oliver@oliverservin.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Setdeu\\FahrenheitCelsiusConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setdeu\\FahrenheitCelsiusConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
